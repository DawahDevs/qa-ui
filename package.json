{
  "name": "qa-ui",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@anew/anew": "^1.2.0",
    "@anew/plugins": "^1.5.1",
    "@anew/provider": "^2.2.1",
    "@anew/router": "^2.2.0",
    "@anew/store": "^2.6.2",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "classnames": "^2.2.6",
    "lodash.debounce": "^4.0.8",
    "lodash.noop": "^3.0.1",
    "moment": "^2.24.0",
    "normalize.css": "^8.0.1",
    "react": "^16.13.1",
    "react-avatar": "^3.9.2",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.1",
    "react-serialize": "^0.2.0",
    "react-virtualized": "^9.21.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "test": "react-scripts test",
    "build": "cross-env CI=true yarn test && react-scripts build",
    "build:dev": "sh -ac '. .env.development; yarn build'",
    "deploy": "firebase use qa-ui && yarn version && yarn build && yarn deploy:hosting",
    "deploy:dev": "firebase use qa-ui-dev && yarn build:dev && yarn deploy:hosting",
    "deploy:hosting": "firebase deploy --only hosting"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "cross-env": "^7.0.2",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "faker": "^4.1.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "node-sass": "^4.13.1",
    "prettier": "^2.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,scss,md,html,xml}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "transformIgnorePatterns": [
      "node_modules/(?!(@anew|@babel/runtime))"
    ]
  }
}
